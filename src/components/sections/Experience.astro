---
import Section from "../Section.astro"
import { work } from "@lib/cv.json"

function obtenerNombreMes (numero : number) {
          let miFecha = new Date();
          if (0 < numero && numero <= 12) {
           miFecha.setMonth(numero);
          return new Intl.DateTimeFormat('es-ES', { month: 'short'}).format(miFecha);
          } else {
          return "";
         }
         }
---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url }) => {
          const startYear = new Date(startDate).getFullYear()
          const endYear = endDate  ? new Date(endDate).getFullYear() : "Actual"
          const st = new Date(startDate).getMonth()
          const en = new Date(endDate).getMonth()
          const years = `${obtenerNombreMes(st)} ${startYear} â†’  ${obtenerNombreMes(en)} ${endYear}`

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{position}</h3>
                    <h4>{url ? <a href={url} title={`Ver ${name}`} target="_blank" rel="noopener noreferrer nofollow">{name}</a> : name}</h4>
                  </div>
                  <time>{years}</time>
                </header>
                <footer>
                  <p>{summary}</p>
                  <p class="medium">{highlights}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    text-transform: capitalize;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
